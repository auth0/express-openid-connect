{
    "env": {
        "es6": true,
        "node": true,
        "jest": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-trailing-spaces": 2,
        "no-useless-escape": 1,
        "no-console": 0,
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2018
    }
}
